{
    "name": "Colorify",
    "description": "This is a Color Picker extension for Chrome...",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },

    "action": {
        "default_popup": "popup.html"
    },

    "icons": {
        "16": "/images/icon_16.png",
        "32": "/images/icon_32.png",
        "48": "/images/icon_48.png"
    }
}